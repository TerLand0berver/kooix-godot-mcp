{
  "name": "kooix-godot-mcp",
  "version": "1.1.8",
  "description": "A comprehensive Model Context Protocol server for Godot game engine development assistance with AI-powered debugging, code generation, and project analysis",
  "main": "dist/index.js",
  "bin": {
    "godot-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && node scripts/pre-publish.js",
    "postpublish": "echo 'Published to npm successfully! Install with: npm install -g kooix-godot-mcp'",
    "validate": "node scripts/pre-publish.js",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "godot",
    "game-development",
    "ai-assistant",
    "debugging",
    "code-generation",
    "claude",
    "cursor",
    "typescript",
    "gamedev",
    "ai-tools"
  ],
  "author": "telagod <vnw@live.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TerLand0berver/kooix-godot-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/TerLand0berver/kooix-godot-mcp/issues"
  },
  "homepage": "https://github.com/TerLand0berver/kooix-godot-mcp#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
